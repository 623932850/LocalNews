<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="news_tap_text_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:textColor">@color/news_tabs_text_color</item>
        <item name="android:textSize">@dimen/news_title_textSize</item>

    </style>

    <style name="topic_title_radio_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/topic_tabs_text_color</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="topic_title_radio_btn_left" parent="topic_title_radio_btn">
        <item name="android:background">@drawable/btn_radio_left</item>
    </style>


    <style name="topic_title_radio_btn_right" parent="topic_title_radio_btn">
        <item name="android:background">@drawable/btn_radio_right</item>
    </style>

    <style name="my_listitem_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">#435268</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">22dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawableRight">@mipmap/ic_right_arrow</item>
    </style>
</resources>
